<%# 
========================================
DETALLE DE CURSO - EDUCONECTA
========================================
Página individual de cada curso
%>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="<%= course.description %>">
    <title><%= course.title %> - EduConecta</title>
    
    <link rel="icon" type="image/png" href="/images/logoEduConecta.png">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <%- include('../partials/styles') %>
</head>
<body class="bg-gray-50">
    <%- include('../partials/header') %>

    <%# Hero del Curso %>
    <section class="bg-gradient-to-r from-blue-600 to-blue-900 text-white py-16">
        <div class="container mx-auto px-4">
            <div class="grid md:grid-cols-2 gap-8 items-center">
                <div>
                    <%# Badges %>
                    <div class="mb-6 flex flex-wrap items-center gap-3">
                        <span class="bg-white/20 backdrop-blur-sm px-4 py-2 rounded-full text-sm font-semibold"><%= course.category %></span>
                        <span class="bg-white/20 backdrop-blur-sm px-4 py-2 rounded-full text-sm font-semibold"><%= course.level %></span>
                        <span class="flex items-center gap-1 bg-white/20 backdrop-blur-sm px-4 py-2 rounded-full">
                            <i class="bi bi-star-fill text-yellow-400"></i>
                            <%= course.rating %> (<%= course.reviews %> reseñas)
                        </span>
                    </div>

                    <h1 class="text-4xl md:text-5xl font-bold mb-6 leading-tight"><%= course.title %></h1>
                    <p class="text-lg mb-8 opacity-90 leading-relaxed"><%= course.description %></p>

                    <%# Meta Info %>
                    <div class="flex flex-wrap gap-6 text-sm">
                        <div class="flex items-center gap-2">
                            <i class="bi bi-clock text-xl"></i>
                            <span><strong><%= course.hours %></strong> horas</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <i class="bi bi-book text-xl"></i>
                            <span><strong><%= course.lessons %></strong> lecciones</span>
                        </div>
                    </div>
                </div>

                <%# Imagen %>
                <div class="relative">
                    <% if (course.badge) { %>
                        <div class="absolute top-4 right-4 z-10">
                            <span class="px-4 py-2 rounded-full text-white font-bold text-sm shadow-lg" style="background-color: <%= course.badgeColor %>;"><%= course.badge %></span>
                        </div>
                    <% } %>
                    <img src="<%= course.image %>" alt="<%= course.title %>" class="w-full rounded-2xl shadow-2xl">
                </div>
            </div>
        </div>
    </section>

    <%# Contenido Principal %>
    <section class="container mx-auto px-4 py-12">
        <div class="grid lg:grid-cols-3 gap-8">
            
            <%# Contenido Izquierdo %>
            <div class="lg:col-span-2 space-y-8">
                
                <%# Descripción %>
                <div class="bg-white rounded-2xl shadow-lg p-8">
                    <h2 class="text-3xl font-bold text-gray-800 mb-6 flex items-center gap-3">
                        <i class="bi bi-info-circle text-blue-600"></i>
                        Descripción del Curso
                    </h2>
                    <p class="text-gray-600 mb-6 leading-relaxed text-lg"><%= course.description %></p>
                    
                    <h3 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-3">
                        <i class="bi bi-check-circle text-green-500"></i>
                        ¿Qué aprenderás?
                    </h3>
                    <ul class="space-y-4">
                        <li class="flex items-start gap-3 p-3 bg-green-50 rounded-lg">
                            <i class="bi bi-check-circle-fill text-green-500 text-xl mt-1"></i>
                            <span class="text-gray-700">Fundamentos y conceptos clave del tema</span>
                        </li>
                        <li class="flex items-start gap-3 p-3 bg-green-50 rounded-lg">
                            <i class="bi bi-check-circle-fill text-green-500 text-xl mt-1"></i>
                            <span class="text-gray-700">Técnicas prácticas aplicables inmediatamente</span>
                        </li>
                        <li class="flex items-start gap-3 p-3 bg-green-50 rounded-lg">
                            <i class="bi bi-check-circle-fill text-green-500 text-xl mt-1"></i>
                            <span class="text-gray-700">Proyectos reales para tu portafolio</span>
                        </li>
                        <li class="flex items-start gap-3 p-3 bg-green-50 rounded-lg">
                            <i class="bi bi-check-circle-fill text-green-500 text-xl mt-1"></i>
                            <span class="text-gray-700">Certificación reconocida al completar</span>
                        </li>
                    </ul>
                </div>

                <%# Temario %>
                <div class="bg-white rounded-2xl shadow-lg p-8">
                    <h2 class="text-3xl font-bold text-gray-800 mb-6 flex items-center gap-3">
                        <i class="bi bi-list-check text-blue-600"></i>
                        Temario del Curso
                    </h2>
                    <div class="space-y-3">
                        <% const modules = ['Introducción y Fundamentos', 'Conceptos Intermedios', 'Práctica y Aplicación', 'Proyecto Final'];
                        modules.forEach((mod, i) => { %>
                        <div class="border-2 border-gray-200 rounded-xl overflow-hidden hover:border-blue-500 transition">
                            <div class="bg-gradient-to-r from-blue-50 to-blue-100 p-5 cursor-pointer">
                                <div class="flex items-center justify-between">
                                    <div>
                                        <h4 class="font-bold text-blue-600 text-lg mb-1">Modulo <%= i + 1 %>: <%= mod %></h4>
                                        <p class="text-gray-600 text-sm"><%= 3 + i %> lecciones • <%= 1.5 + (i * 0.5) %> horas</p>
                                    </div>
                                    <i class="bi bi-chevron-down text-blue-600 text-xl"></i>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
            </div>

            <%# Sidebar %>
            <div>
                <div class="bg-white rounded-2xl shadow-lg p-6 sticky top-24">
                    <%# Precio %>
                    <div class="text-center mb-8 pb-6 border-b-2">
                        <% if (course.price === 0) { %>
                            <div class="text-5xl font-bold text-green-500 mb-2">GRATIS</div>
                            <div class="text-gray-400 line-through text-xl">$<%= course.originalPrice %></div>
                            <div class="bg-green-100 text-green-700 font-semibold py-2 px-4 rounded-full inline-block mt-2">100% OFF</div>
                        <% } else { %>
                            <div class="text-5xl font-bold text-blue-600 mb-2">$<%= course.price %></div>
                            <div class="text-gray-400 line-through text-xl">$<%= course.originalPrice %></div>
                            <div class="bg-green-100 text-green-700 font-semibold py-2 px-4 rounded-full inline-block mt-2"><%= course.discount %>% OFF</div>
                        <% } %>
                    </div>

                    <%# Botones %>
                    <button class="w-full bg-gradient-to-r from-blue-600 to-blue-700 text-white py-4 rounded-xl font-bold text-lg mb-3 hover:shadow-xl transition transform hover:-translate-y-1">
                        <i class="bi bi-cart-plus mr-2"></i>Comprar Ahora
                    </button>
                    <button class="w-full border-2 border-indigo-600 text-indigo-600 py-4 rounded-xl font-bold text-lg mb-6 hover:bg-indigo-50 transition">
                        <i class="bi bi-bookmark-plus mr-2"></i>Añadir al Carrito
                    </button>

                    <%# Incluye %>
                    <h4 class="font-bold text-gray-800 mb-4 text-lg">Este curso incluye:</h4>
                    <ul class="space-y-3 mb-6">
                        <li class="flex items-center gap-3 text-gray-700">
                            <i class="bi bi-check-circle-fill text-green-500"></i>
                            <span><%= course.lessons %> lecciones en video HD</span>
                        </li>
                        <li class="flex items-center gap-3 text-gray-700">
                            <i class="bi bi-check-circle-fill text-green-500"></i>
                            <span><%= course.hours %> horas de contenido</span>
                        </li>
                        <li class="flex items-center gap-3 text-gray-700">
                            <i class="bi bi-check-circle-fill text-green-500"></i>
                            <span>Certificado de finalización</span>
                        </li>
                        <li class="flex items-center gap-3 text-gray-700">
                            <i class="bi bi-check-circle-fill text-green-500"></i>
                            <span>Acceso de por vida</span>
                        </li>
                        <li class="flex items-center gap-3 text-gray-700">
                            <i class="bi bi-check-circle-fill text-green-500"></i>
                            <span>Garantía 30 días</span>
                        </li>
                    </ul>

                    <div class="text-center pt-6 border-t-2">
                        <div class="flex items-center justify-center gap-2 text-gray-600">
                            <i class="bi bi-shield-check text-green-500 text-2xl"></i>
                            <span class="font-semibold">Compra 100% segura</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%# Cursos Relacionados %>
    <% if (typeof relatedCourses !== 'undefined' && relatedCourses.length > 0) { %>
    <section class="bg-gray-100 py-16">
        <div class="container mx-auto px-4">
            <h2 class="text-4xl font-bold text-gray-800 text-center mb-12">Cursos Relacionados</h2>
            <div class="grid md:grid-cols-3 gap-8">
                <% relatedCourses.forEach(related => { %>
                <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition transform hover:-translate-y-2">
                    <img src="<%= related.image %>" alt="<%= related.title %>" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <h4 class="font-bold text-gray-800 mb-3 text-lg line-clamp-2"><%= related.title %></h4>
                        <p class="text-gray-600 text-sm mb-4 line-clamp-2"><%= related.description %></p>
                        <div class="flex justify-between items-center">
                            <% if (related.price === 0) { %>
                                <span class="text-green-500 font-bold text-xl">GRATIS</span>
                            <% } else { %>
                                <span class="text-blue-600 font-bold text-xl">$<%= related.price %></span>
                            <% } %>
                            <a href="/curso/<%= related.id %>" class="bg-blue-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-blue-700 transition">Ver Curso</a>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </section>
    <% } %>

    <%- include('../partials/footer') %>
    <%- include('../partials/modals') %>
    <%- include('../partials/scripts') %>
</body>
</html>
