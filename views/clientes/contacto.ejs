<%# 
========================================
CONTACTO - EDUCONECTA
========================================
Página de contacto con formulario
%>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Contacta con EduConecta. Estamos aquí para ayudarte.">
    <title>Contacto - EduConecta</title>
    
    <link rel="icon" type="image/png" href="/images/logoEduConecta.png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Figtree:wght@400;500;600;700&family=Material+Symbols+Outlined" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        'display': ['Space Grotesk', 'sans-serif'],
                        'body': ['Figtree', 'sans-serif']
                    }
                }
            }
        }
    </script>
    <%- include('../partials/styles') %>
</head>
<body>
    <%- include('../partials/header') %>

    <%# Hero %>
    <section class="bg-gradient-to-r from-indigo-600 to-purple-700 text-white py-20">
        <div class="container mx-auto px-4 text-center max-w-4xl">
            <div class="inline-block bg-white/20 backdrop-blur-sm px-6 py-3 rounded-full mb-6">
                <i class="bi bi-chat-dots text-2xl mr-2"></i>
                <span class="font-semibold">Estamos aquí para ayudarte</span>
            </div>
            <h1 class="text-5xl md:text-6xl font-bold mb-6">Contacto</h1>
            <p class="text-xl opacity-90">Conéctate con nuestro equipo de expertos</p>
            
            <%# Stats %>
            <div class="grid grid-cols-3 gap-6 max-w-2xl mx-auto mt-12">
                <div class="text-center">
                    <div class="text-4xl font-bold mb-2">24/7</div>
                    <div class="text-sm opacity-90">Soporte Online</div>
                </div>
                <div class="text-center">
                    <div class="text-4xl font-bold mb-2">1hr</div>
                    <div class="text-sm opacity-90">Tiempo Respuesta</div>
                </div>
                <div class="text-center">
                    <div class="text-4xl font-bold mb-2">98%</div>
                    <div class="text-sm opacity-90">Satisfacción</div>
                </div>
            </div>
        </div>
    </section>

    <%# Sección de Contacto %>
    <section class="py-20 bg-gray-50">
        <div class="container mx-auto px-4">
            <div class="grid lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
                
                <%# Formulario %>
                <div class="bg-white rounded-2xl shadow-xl p-8">
                    <div class="mb-8">
                        <div class="inline-block bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-6 py-3 rounded-full mb-4">
                            <i class="bi bi-pencil-square mr-2"></i>
                            <span class="font-semibold">Envíanos un Mensaje</span>
                        </div>
                        <h3 class="text-3xl font-bold text-gray-800 mb-2">¿Cómo podemos ayudarte?</h3>
                        <p class="text-gray-600">Te responderemos en menos de 1 hora</p>
                    </div>

                    <form id="contactForm" class="space-y-6">
                        <div class="grid md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-gray-700 font-semibold mb-2">Nombre *</label>
                                <div class="relative">
                                    <i class="bi bi-person absolute left-4 top-1/2 transform -translate-y-1/2 text-indigo-600 text-xl"></i>
                                    <input type="text" required placeholder="Juan Pérez" class="w-full pl-12 pr-4 py-3 border-2 border-gray-200 rounded-xl focus:border-indigo-600 focus:outline-none">
                                </div>
                            </div>
                            <div>
                                <label class="block text-gray-700 font-semibold mb-2">Email *</label>
                                <div class="relative">
                                    <i class="bi bi-envelope absolute left-4 top-1/2 transform -translate-y-1/2 text-indigo-600 text-xl"></i>
                                    <input type="email" required placeholder="juan@email.com" class="w-full pl-12 pr-4 py-3 border-2 border-gray-200 rounded-xl focus:border-indigo-600 focus:outline-none">
                                </div>
                            </div>
                        </div>
                        <div>
                            <label class="block text-gray-700 font-semibold mb-2">Asunto *</label>
                            <div class="relative">
                                <i class="bi bi-list-ul absolute left-4 top-1/2 transform -translate-y-1/2 text-indigo-600 text-xl"></i>
                                <select required class="w-full pl-12 pr-4 py-3 border-2 border-gray-200 rounded-xl focus:border-indigo-600 focus:outline-none appearance-none">
                                    <option value="">Selecciona un asunto</option>
                                    <option>Soporte Técnico</option>
                                    <option>Ventas y Planes</option>
                                    <option>Consultas Académicas</option>
                                    <option>Consulta General</option>
                                </select>
                            </div>
                        </div>
                        <div>
                            <label class="block text-gray-700 font-semibold mb-2">Mensaje *</label>
                            <div class="relative">
                                <i class="bi bi-chat-text absolute left-4 top-4 text-indigo-600 text-xl"></i>
                                <textarea rows="5" required placeholder="Describe tu consulta..." class="w-full pl-12 pr-4 py-3 border-2 border-gray-200 rounded-xl focus:border-indigo-600 focus:outline-none resize-none"></textarea>
                            </div>
                        </div>
                        <button type="submit" class="w-full bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-4 rounded-xl font-bold text-lg hover:shadow-xl transition transform hover:-translate-y-1">
                            <i class="bi bi-send mr-2"></i>Enviar Mensaje
                        </button>
                    </form>
                </div>

                <%# Info de Contacto %>
                <div class="space-y-6">
                    <div class="bg-white rounded-2xl shadow-xl p-8">
                        <h3 class="text-2xl font-bold text-gray-800 mb-6">Información de Contacto</h3>
                        <div class="space-y-4">
                            <div class="flex items-start gap-4 p-4 bg-gradient-to-r from-indigo-50 to-purple-50 rounded-xl border-l-4 border-indigo-600">
                                <div class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white w-14 h-14 rounded-full flex items-center justify-center flex-shrink-0">
                                    <i class="bi bi-envelope-fill text-2xl"></i>
                                </div>
                                <div>
                                    <h4 class="font-bold text-gray-800 mb-1">Email</h4>
                                    <p class="text-gray-600 text-sm">info@educonecta.edu.ve</p>
                                    <p class="text-gray-600 text-sm">soporte@educonecta.edu.ve</p>
                                </div>
                            </div>
                            <div class="flex items-start gap-4 p-4 bg-gradient-to-r from-green-50 to-teal-50 rounded-xl border-l-4 border-green-500">
                                <div class="bg-gradient-to-r from-green-500 to-teal-500 text-white w-14 h-14 rounded-full flex items-center justify-center flex-shrink-0">
                                    <i class="bi bi-telephone-fill text-2xl"></i>
                                </div>
                                <div>
                                    <h4 class="font-bold text-gray-800 mb-1">Teléfono</h4>
                                    <p class="text-gray-600 text-sm">+58 414-123-4567</p>
                                    <p class="text-gray-600 text-sm">Lun - Sáb: 9:00 AM - 6:00 PM</p>
                                </div>
                            </div>
                            <div class="flex items-start gap-4 p-4 bg-gradient-to-r from-yellow-50 to-orange-50 rounded-xl border-l-4 border-yellow-500">
                                <div class="bg-gradient-to-r from-yellow-500 to-orange-500 text-white w-14 h-14 rounded-full flex items-center justify-center flex-shrink-0">
                                    <i class="bi bi-geo-alt-fill text-2xl"></i>
                                </div>
                                <div>
                                    <h4 class="font-bold text-gray-800 mb-1">Dirección</h4>
                                    <p class="text-gray-600 text-sm">San Juan de los Morros</p>
                                    <p class="text-gray-600 text-sm">Estado Guárico, Venezuela</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%# FAQ %>
    <section class="py-20 bg-white">
        <div class="container mx-auto px-4">
            <div class="text-center mb-16">
                <h2 class="text-4xl font-bold text-gray-800 mb-4">Preguntas Frecuentes</h2>
            </div>
            <div class="grid md:grid-cols-2 gap-6 max-w-5xl mx-auto">
                <% const faqs = [
                    { q: '¿Cómo me inscribo en un curso?', a: 'Navega por el catálogo, selecciona el curso y haz clic en "Comprar Ahora".' },
                    { q: '¿Los certificados son reconocidos?', a: 'Sí, son verificables y reconocidos en Venezuela y Latinoamérica.' },
                    { q: '¿Puedo acceder desde mi móvil?', a: 'Sí, nuestra plataforma funciona en cualquier dispositivo.' },
                    { q: '¿Ofrecen soporte técnico?', a: 'Sí, soporte 24/7 por email, chat y teléfono.' }
                ];
                faqs.forEach(faq => { %>
                <div class="bg-gray-50 rounded-xl p-6 border-2 border-gray-200 hover:border-indigo-600 transition">
                    <h4 class="font-bold text-gray-800 mb-3 flex items-center gap-2">
                        <i class="bi bi-question-circle text-indigo-600"></i>
                        <%= faq.q %>
                    </h4>
                    <p class="text-gray-600"><%= faq.a %></p>
                </div>
                <% }); %>
            </div>
        </div>
    </section>

    <%- include('../partials/footer') %>
    <%- include('../partials/modals') %>
    <%- include('../partials/scripts') %>

    <script>
        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Gracias por contactarnos. Te responderemos pronto.');
            this.reset();
        });
    </script>
</body>
</html>
