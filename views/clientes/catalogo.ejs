<%# 
========================================
CATÁLOGO DE CURSOS - EDUCONECTA
========================================
Lista completa de cursos disponibles
%>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Explora nuestro catálogo completo de cursos online.">
    <title>Catálogo de Cursos - EduConecta</title>
    
    <link rel="icon" type="image/png" href="/images/logoEduConecta.png">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <%- include('../partials/styles') %>
</head>
<body>
    <%- include('../partials/header') %>

    <%# Hero %>
    <section class="bg-gradient-to-r from-indigo-600 to-purple-700 text-white py-20">
        <div class="container mx-auto px-4 text-center max-w-4xl">
            <div class="inline-block bg-white/20 backdrop-blur-sm px-6 py-3 rounded-full mb-6">
                <span class="material-symbols-outlined text-2xl mr-2" style="vertical-align: middle;">school</span>
                <span class="font-semibold">Aprende sin límites</span>
            </div>
            <h1 class="text-5xl md:text-6xl font-bold mb-6">Catálogo de Cursos</h1>
            <p class="text-xl opacity-90">Descubre cursos diseñados para impulsar tu crecimiento profesional</p>
        </div>
    </section>

    <%# Filtros %>
    <section class="bg-white shadow-md sticky top-0 z-40 border-b-2">
        <div class="container mx-auto px-4 py-6">
            <div class="grid md:grid-cols-4 gap-4">
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Categoría</label>
                    <select class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-indigo-600 focus:outline-none">
                        <option>Todas las categorías</option>
                        <option>Inglés</option>
                        <option>Marketing</option>
                        <option>Programación</option>
                        <option>Negocios</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Nivel</label>
                    <select class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-indigo-600 focus:outline-none">
                        <option>Todos los niveles</option>
                        <option>Principiante</option>
                        <option>Intermedio</option>
                        <option>Avanzado</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Precio</label>
                    <select class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-indigo-600 focus:outline-none">
                        <option>Todos los precios</option>
                        <option>Gratis</option>
                        <option>Menos de $50</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Ordenar</label>
                    <select class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-indigo-600 focus:outline-none">
                        <option>Popularidad</option>
                        <option>Precio: Menor a Mayor</option>
                        <option>Calificación</option>
                    </select>
                </div>
            </div>
        </div>
    </section>

    <%# Resultados %>
    <section class="bg-gray-50 py-6">
        <div class="container mx-auto px-4">
            <h2 class="text-2xl font-bold text-gray-800">
                Se encontraron <span class="text-indigo-600"><%= courses.length %> cursos</span>
            </h2>
        </div>
    </section>

    <%# Grid de Cursos %>
    <section class="py-16 bg-gray-50">
        <div class="container mx-auto px-4">
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                <% courses.forEach(course => { %>
                <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition transform hover:-translate-y-2 group">
                    <%# Imagen %>
                    <div class="relative overflow-hidden">
                        <img src="<%= course.image %>" alt="<%= course.title %>" class="w-full h-56 object-cover group-hover:scale-110 transition duration-500">
                        <% if (course.badge) { %>
                        <div class="absolute top-4 right-4">
                            <span class="px-4 py-2 rounded-full text-white font-bold text-sm shadow-lg" style="background-color: <%= course.badgeColor %>;">
                                <%= course.badge %>
                            </span>
                        </div>
                        <% } %>
                    </div>

                    <%# Contenido %>
                    <div class="p-6">
                        <div class="flex items-center gap-2 mb-3">
                            <span class="bg-indigo-100 text-indigo-700 px-3 py-1 rounded-full text-xs font-semibold"><%= course.category %></span>
                            <span class="bg-green-100 text-green-700 px-3 py-1 rounded-full text-xs font-semibold"><%= course.level %></span>
                        </div>
                        <h3 class="text-xl font-bold text-gray-800 mb-3 line-clamp-2 group-hover:text-indigo-600 transition"><%= course.title %></h3>
                        <p class="text-gray-600 text-sm mb-4 line-clamp-2"><%= course.description %></p>
                        
                        <%# Meta Info %>
                        <div class="flex items-center gap-4 text-sm text-gray-600 mb-4 pb-4 border-b">
                            <div class="flex items-center gap-1">
                                <span class="material-symbols-outlined text-lg">schedule</span>
                                <span><%= course.hours %>h</span>
                            </div>
                            <div class="flex items-center gap-1">
                                <span class="material-symbols-outlined text-lg">menu_book</span>
                                <span><%= course.lessons %> lecciones</span>
                            </div>
                            <div class="flex items-center gap-1">
                                <span class="material-symbols-outlined text-lg text-yellow-400">star</span>
                                <span><%= course.rating %></span>
                            </div>
                        </div>

                        <%# Precio y CTA %>
                        <div class="flex items-center justify-between">
                            <div>
                                <% if (course.price === 0) { %>
                                    <div class="text-2xl font-bold text-green-500">GRATIS</div>
                                <% } else { %>
                                    <div class="text-2xl font-bold text-indigo-600">$<%= course.price %></div>
                                <% } %>
                                <div class="text-sm text-gray-400 line-through">$<%= course.originalPrice %></div>
                            </div>
                            <a href="/curso/<%= course.id %>" class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-6 py-3 rounded-xl font-semibold hover:shadow-xl transition transform hover:-translate-y-1 flex items-center gap-2">
                                Ver Curso
                                <span class="material-symbols-outlined">arrow_forward</span>
                            </a>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </section>

    <%# CTA %>
    <section class="bg-gradient-to-r from-indigo-600 to-purple-700 text-white py-20">
        <div class="container mx-auto px-4 text-center">
            <h2 class="text-4xl font-bold mb-6">¿No encuentras lo que buscas?</h2>
            <p class="text-xl opacity-90 mb-8 max-w-2xl mx-auto">Contáctanos y te ayudaremos a encontrar el curso perfecto</p>
            <a href="/contacto" class="inline-flex items-center gap-2 bg-white text-indigo-600 px-8 py-4 rounded-xl font-bold hover:shadow-xl transition">
                Contactar Ahora
                <span class="material-symbols-outlined">arrow_forward</span>
            </a>
        </div>
    </section>

    <%- include('../partials/footer') %>
    <%- include('../partials/modals') %>
    <%- include('../partials/scripts') %>
</body>
</html>
